<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#21333a"
    android:paddingLeft="20px"

    android:paddingTop="40px"
    android:paddingRight="40px"
    android:orientation="vertical"
    tools:context=".Splash">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1.8"
    android:orientation="vertical"
    android:background="@drawable/radius_back">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2">



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="25dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:src="@drawable/circle"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingRight="50dp"
            android:paddingLeft="60dp"
            android:paddingTop="3dp"
            android:layout_gravity="center"
            android:layout_weight="6">

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"

                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18dp"

                android:textColor="@android:color/white"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_grey"
                android:text="4,5"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/back_text_white">

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/ratingServ"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:numStars="5"
                android:rating="3.5"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:stepSize="0.5"
                android:layout_gravity="center"
                android:max="5"
                android:scaleX="0.8"
                android:scaleY="0.8"
                app:mrb_progressTint="#ffcc00"
                app:mrb_secondaryProgressTint="#e8ae30"
                style="@style/Widget.MaterialRatingBar.RatingBar" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_weight="0.5"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:paddingLeft="12dp"
                    android:textSize="20dp"
                    android:textColor="#21333a"
                    android:fontFamily="@font/gothamroundedmedium"
                    android:text="SECRETARÍA DISTRITAL DE MOVILIDAD"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="top|left"
                    android:textSize="15dp"
                    android:paddingLeft="90dp"
                    android:textColor="#21333a"
                    android:fontFamily="@font/gothamroundedmedium"
                    android:text="Tarjeta de control Nº"/>

            </LinearLayout>


            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/alcaldias"
                android:paddingBottom="12dp"
                />


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:paddingRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25dp"

                android:textColor="#21333a"
                android:background="@drawable/back_rounded_full"
                android:fontFamily="@font/gothamroundedmedium"
                android:text="Driver name"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"></LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_grey"
                android:text="RH"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#21333a"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_white"
                android:text="AB-"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:paddingRight="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_grey"
                android:text="EPS"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#21333a"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_white"
                android:text="EPS name"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"></LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_grey"
                android:text="ARL"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#21333a"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_white"
                android:text="ARL name"/>


        </LinearLayout>




    </LinearLayout>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_weight="0.3">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:alpha="0.7"
            android:background="#D8D8D8"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"></LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.7"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="30dp"

                android:textColor="#21333a"
                android:background="@drawable/back_placa_orange"
                android:fontFamily="@font/gothamroundedmedium"
                android:text="ERF549"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"></LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_grey"
                android:text="Nº de orden"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#21333a"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_white"
                android:text="order number"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"></LinearLayout>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_grey"
                android:text="fecha de vencimiento"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#21333a"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_white"
                android:text="exp date"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.45"></LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"></LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_grey"
                android:text="Razón social"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#21333a"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_white"
                android:text="organization name"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"></LinearLayout>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_grey"
                android:text="NIT"/>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#21333a"
                android:fontFamily="@font/gothamroundedmedium"
                android:background="@drawable/back_text_white"
                android:text="123456789"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"></LinearLayout>



    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_weight="1">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:alpha="0.7"
                android:background="#D8D8D8"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/logortaxi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="12dp"
            android:src="@drawable/logo_rtaxi"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"></LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingRight="0dp"
            android:src="@drawable/logocolor"/>




    </LinearLayout>
</LinearLayout>



</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.1"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_weight="5"/>

    <RadioButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:gravity="center"
        android:scaleX="0.7"
        android:scaleY="0.7"

        />
    <RadioButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:scaleX="0.7"
        android:scaleY="0.7"

        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_weight="4"/>
</LinearLayout>

</LinearLayout>