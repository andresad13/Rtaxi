<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginAcgivity"
    android:orientation="vertical"
    android:background="@drawable/slice1_landscape">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"></LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:src="@drawable/logo_rtaxi"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:minHeight="150dp"
        android:paddingLeft="280dp"
        android:paddingRight="280dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></LinearLayout>
        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_weight="1.5"
            android:hint="Usuario"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_shape"
            android:layout_gravity="center"
            android:textColorHint="@android:color/white"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></LinearLayout>
        <EditText
            android:id="@+id/userPass"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_weight="1.5"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:textColorHint="@android:color/white"
            android:background="@drawable/edittext_shape"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"></LinearLayout>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:text="Ingresa"
            android:textColor="@android:color/darker_gray"
            android:background="@drawable/button_shape"
            android:layout_weight="1.5"/>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"></LinearLayout>


</LinearLayout>